{
  "name": "Room",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "bg_color": {
      "type": "string",
      "required": true
    },
    "txt_color": {
      "type": "string",
      "required": true
    },
    "presence": {
      "type": "boolean",
      "default": false
    },
    "minimum_capacity": {
      "type": "number",
      "requied": true,
      "default": 1
    }
  },
  "validations": [],
  "relations": {
    "bookings": {
      "type": "hasMany",
      "model": "Booking",
      "foreignKey": "room_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "available-bookings"
    }
  ],
  "methods": {}
}
