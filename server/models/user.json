{
  "name": "user",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "picture": {
      "type": "string",
      "default": ""
    },
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true,
      "default": "user"
    },
    "profile": {
      "type": "string"
    },
    "slackAccessToken": {
      "type": "string"
    }
  },
  "hidden": ["slackAccessToken"],
  "validations": [],
  "relations": {
    "bookings": {
      "type": "hasMany",
      "model": "Booking",
      "foreignKey": "user_id"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
